@{
    ViewData["Title"] = "Página Principal";
}

<h1>Reservas de Viajes</h1>

<div>
    <h2>Buscar Rutas</h2>
    <form asp-action="Busqueda" method="get">
        <div>
            <label>Origen:</label>
            <input type="text" name="origen" required />
        </div>
        <div>
            <label>Destino:</label>
            <input type="text" name="destino" required />
        </div>
        <div>
            <label>Fecha:</label>
            <input type="date" name="fecha" required />
        </div>
        <button type="submit">Buscar</button>
    </form>
</div>

<div>
    <h2>Promociones</h2>
    <ul>
        <li>Promo 1: 20% de descuento en rutas seleccionadas</li>
        <li>Promo 2: Compra 2, lleva 3</li>
        <li>Promo 3: Asiento gratis para niños menores de 12 años</li>
    </ul>
</div>

